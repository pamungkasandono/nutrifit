<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nutrifit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_700</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
    </style>

    <style name="TextStyleReguler">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:letterSpacing">0.14</item>
    </style>

    <style name="TextStyleReguler.Title">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleReguler.SubTitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyleReguler.MediumTitle">
        <item name="android:fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DetailItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="TextViewItemDetailCompositionSize">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewItemDetailName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageViewItemDetailBtnInfo">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:src">@drawable/ic_info</item>
    </style>

    <style name="LayoutListItemDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="LayoutListItemDetail.first">
        <item name="android:layout_marginTop">13dp</item>
    </style>

    <style name="LayoutListItemDetail.other">
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="TextViewListItemDetail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_700</item>
    </style>

    <style name="TextViewListItemDetail.nutriData">
        <item name="android:text">@string/dummy_size_100g</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="ImageViewListItemDetail">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:contentDescription">@string/img_desc_info_button</item>
        <item name="android:src">@drawable/ic_info</item>
    </style>

    <style name="FabLabel">
        <item name="android:background">@drawable/bg_label_fab</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
