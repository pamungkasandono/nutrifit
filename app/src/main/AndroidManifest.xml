<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udimuhaits.nutrifit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_nutrifit_foreground"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nutrifit">
        <activity android:name=".ui.historydetail.HistoryActivity"/>
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.imagedetection.ImageDetection" />
        <activity android:name=".ui.form.FormInputActivity" />
        <activity android:name=".ui.form.FormUpdateActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.getstarted.ContainerActivity" />
        <activity android:name=".ui.detail.DetailActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>